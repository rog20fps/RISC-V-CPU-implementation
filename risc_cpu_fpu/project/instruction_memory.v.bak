module instrution_memory #(parameter V=32 , ram_size=1024)
(
   input  [V-1:0] instr_address,       //address where the instructions are stored 
	output [V-1:0] instr                //instructions from hex file to binary
);

reg [V-1:32] instr_ram[ram_size-1:0];    //1024 instructions of 32 bt wide held in array of inst_ram


initial 
begin 
     
	  $readmemh("", inst_ram);           //reads the text file 
	  
end 

assign instr=instr_ram[instr_address[V-1:0]];  //fetches the instruction from inst_ram